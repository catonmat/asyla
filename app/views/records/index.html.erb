     </div>


    <div class="card-records-container ">
      <i class="fas fa-briefcase"></i><p>Medical</p>
       <div class="card-records-section">
        <% @records.each do |record| %>
          <% if record.task.goal.category.name == "Medical" %>
            <div class="card-record">
              <%= link_to record_path(record) do%>
              <div class="card-record-document">
                <img class="photo_resizing" src="<%= record.photo %>"></img>
              </div>
              <% end %>
            <p><%= record.title %></p>
          </div>
          <% end %>
        <% end %>


         <div class="card-record">
